<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/top_curve"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginEnd="-50dp"
        app:tint="@color/blue_500"
        android:layout_marginRight="-50dp"
        android:src="@drawable/top_shap"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD DVR"
                android:id="@+id/txt_View_DVR_title"
                android:gravity="center"
                android:textSize="54sp"

                android:padding="8dp"
                android:fontFamily="@font/shadow"
                android:layout_gravity="center_horizontal"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:paddingTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP"
                        android:textStyle="bold"
                        android:textSize="16sp"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="16sp"
                        android:id="@+id/edit_txt_ip"
                        android:background="@drawable/teacher_recyclerview_background_cell"
                        android:inputType="text"
                        android:ems="15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/name_text"
                        android:textStyle="bold"
                        android:textSize="16sp"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="16sp"
                        android:background="@drawable/teacher_recyclerview_background_cell"
                        android:id="@+id/edit_txt_name"
                        android:inputType="text"
                        android:ems="15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHANNEL"
                        android:id="@+id/email_text"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="16sp"
                        android:background="@drawable/teacher_recyclerview_background_cell"
                        android:id="@+id/edit_txt_channel"
                        android:inputType="text"
                        android:ems="15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOST"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="left"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="16sp"
                        android:id="@+id/edit_txt_Host"
                        android:inputType="text" android:background="@drawable/teacher_recyclerview_background_cell"
                        android:ems="15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="left"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/teacher_recyclerview_background_cell"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:boxCornerRadiusBottomEnd="10dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginBottom="-8dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"

                            app:boxCornerRadiusTopStart="10dp"
                            app:endIconMode="password_toggle">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_txt_Pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:inputType="textPassword"
                                android:text="aaddsd"
                                android:layout_marginTop="-8dp"
                                android:textColorHint="@color/black"
                                android:textStyle="bold"
                                android:gravity="center_vertical" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </FrameLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:id="@+id/register_card"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="8dp"
                        android:layout_gravity="center_horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Save"
                            android:textSize="16sp"
                            android:onClick="registerButton"
                            android:id="@+id/btn_add_dvr"
                            android:textStyle="bold"
                            android:ems="15"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>